 </style>

<form id="login-form"></form>



<script>
  const form = document.getElementById("login-form");

  document.addEventListener("DOMContentLoaded", () => {
    let token = localStorage.getItem("accessToken");
    if (token) {
      form.innerHTML = `
        <div class="success-message">
          ðŸŽ‰ Siz muvaffaqiyatli ro'yxatdan o'tdingiz! ðŸŽ‰
        </div>
      `;
    } else {
      form.innerHTML = `
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" value="husniddinsalohiddinov197@gmail.com" class="form-control" name="email" id="email" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" value="qwerty" name="password" class="form-control" id="password">
        </div>
          <div class="mb-3">
              <label for="role" class="form-label">Role</label>
              <select class="form-control" name="role" id="role" required>
                <option value="" disabled selected>Select role</option>
                <option value="author">Author</option>
                <option value="admin">Admin</option>
              </select>
          </div>
        
        <button type="submit" class="btn btn-success">Submit</button>
      `;
    }
  });

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const email = document.getElementById("email").value;
    const password = document.getElementById("password").value;
    let role = document.getElementById("role").value
    if(role == "admin"){
      loginAdmin(email, password)
    }else{
      loginAuthor(email, password)
    }

  });


  async function loginAuthor(email, password){
      
    try {
      const response = await fetch("http://localhost:3000/api/author/login", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ email, password }),
      });

      if (!response.ok) {

        let err= await response.json()
         alert(err.message)
         return 
      }

      const data = await response.json();

      localStorage.setItem("accessToken", data.accessToken);
      console.log("Login successful and token saved!");
      window.location.reload();
    } catch (error) {
      console.error("Error:", error.message);
    }
  }



  
  async function loginAdmin(email, password){
      
    try {

      const response = await fetch("http://localhost:3000/api/admin/login", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ email, password }),
      });

      if (!response.ok) {

        let err= await response.json()
         alert(err.message)
         return 
      }

      const data = await response.json();

      localStorage.setItem("accessToken", data.accessToken);

      console.log("Login successful and token saved!");

      window.location.reload();

    } catch (error) {
      console.error("Error:", error.message);
    }
  }
</script>
